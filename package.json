{
  "name": "@nimbox/js-react-lux",
  "private": false,
  "version": "1.0.7",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    },
    "./styles/elegant.css": {
      "default": "./dist/styles/elegant.css"
    },
    "./icons": {
      "types": "./dist/types/icons/components/index.d.ts",
      "import": "./dist/esm/icons.js",
      "require": "./dist/cjs/icons.js",
      "default": "./dist/esm/icons.js"
    },
    "./figures": {
      "types": "./dist/types/figures/index.d.ts",
      "import": "./dist/esm/figures.js",
      "require": "./dist/cjs/figures.js",
      "default": "./dist/esm/figures.js"
    },
    "./modules/calendar": {
      "types": "./dist/types/modules/calendar/index.d.ts",
      "import": "./dist/esm/modules/calendar.js",
      "require": "./dist/cjs/modules/calendar.js",
      "default": "./dist/esm/modules/calendar.js"
    },
    "./modules/chat": {
      "types": "./dist/types/modules/chat/index.d.ts",
      "import": "./dist/esm/modules/chat.js",
      "require": "./dist/cjs/modules/chat.js",
      "default": "./dist/esm/modules/chat.js"
    },
    "./modules/kanban": {
      "types": "./dist/types/modules/kanban/index.d.ts",
      "import": "./dist/esm/modules/kanban.js",
      "require": "./dist/cjs/modules/kanban.js",
      "default": "./dist/esm/modules/kanban.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist/* && npm run build:icons && npm run build:types && rollup -c",
    "build:types": "tsc -p tsconfig.types.json --emitDeclarationOnly --declaration --outDir dist/types",
    "build:watch": "rm -rf dist/* && npm run build:icons && npm run build:types && rollup -cw",
    "build:watch:yalc": "rm -rf dist/* && npm run build:icons && npm run build:types && rollup -cw -p ./yalc.js",
    "build:icons": "rm -f src/icons/components/*.tsx && cp src/icons/sources/*.svg src/icons/outlines && svgr --config-file icons.svgr.config.js --icon --typescript --silent --out-dir src/icons/components src/icons/outlines",
    "build:emoji": "node scripts/build-emoji.js",
    "lint": "eslint . --ignore-pattern src/sandbox",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "porcelain": "git status --porcelain -- || (echo 'Uncommitted changes detected' && exit 1)",
    "preversion": "npm ci && npm run build && npm run porcelain",
    "postversion": "git push origin main --follow-tags"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@nimbox"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.16",
    "classnames": "^2.5.1",
    "emoji-regex": "^10.4.0",
    "i18next": "^25.4.2",
    "i18next-http-backend": "^3.0.2",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-i18next": "^15.7.2",
    "tinycolor2": "^1.6.0",
    "uuid": "^11.1.0"
  },
  "peerDependencies": {
    "dayjs": "^1",
    "lodash-es": "^4",
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/js": "^9.34.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@storybook/addon-docs": "^9.1.3",
    "@storybook/addon-links": "^9.1.3",
    "@storybook/react-vite": "^9.1.3",
    "@svgr/cli": "^8.1.0",
    "@tailwindcss/vite": "^4.1.12",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@types/tinycolor2": "^1.4.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "eslint": "^9.34.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^9.1.3",
    "execa": "^9.6.0",
    "postcss": "^8.5.6",
    "react-hook-form": "^7.62.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "storybook": "^9.1.3",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "unicode-emoji-json": "^0.8.0",
    "vite": "^7.1.3"
  }
}
