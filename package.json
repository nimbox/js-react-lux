{
  "name": "@nimbox/js-react-lux",
  "version": "0.2.22",
  "private": false,
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "./icons": "./dist/icons/index.js",
    "./styles/elegant": "./dist/styles/elegant.js"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "rm -rf dist/* && npm run build:icons && rollup -c",
    "build:watch": "rm -rf dist/* && npm run build:icons && rollup -cw",
    "build:icons": "rm -f src/icons/*.tsx && svgr --icon --typescript --silent --out-dir src/icons src/icons",
    "build:style": "tailwind build src/styles/index.css -o src/styles/styles.css",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "preversion": "npm install && npm run build",
    "postversion": "git push origin master --follow-tags && npm publish"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@nimbox"
  },
  "dependencies": {
    "@popperjs/core": "^2.9.3",
    "@tailwindcss/forms": "^0.3.3",
    "react-dnd": "^14.0.2",
    "react-dnd-html5-backend": "^14.0.0",
    "react-popper": "^2.2.5",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.7",
    "tinycolor2": "^1.4.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@craco/craco": "^6.2.0",
    "@storybook/addon-actions": "^6.3.6",
    "@storybook/addon-controls": "^6.3.6",
    "@storybook/addon-essentials": "^6.3.6",
    "@storybook/addon-links": "^6.3.6",
    "@storybook/node-logger": "^6.3.6",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.6",
    "@svgr/cli": "^5.5.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.172",
    "@types/node": "^16.4.12",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "@types/tinycolor2": "^1.4.3",
    "@types/uuid": "^8.3.1",
    "autoprefixer": "^9.8.6",
    "classnames": "^2.3.1",
    "eslint-plugin-mdx": "^1.14.1",
    "i18next": "^20.3.5",
    "i18next-xhr-backend": "^3.2.2",
    "lodash": "^4.17.21",
    "postcss": "^7.0.35",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.11.4",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "rollup": "^2.55.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "typescript": "^4.3.5"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:mdx/recommended"
    ],
    "settings": {
      "mdx/code-blocks": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
